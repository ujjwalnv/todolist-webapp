<%- include("header") -%> 

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <% newTasks.forEach(element => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=element._id%>" onChange="this.form.submit()"/>
        <p><%= element.name %></p>
        <input type="hidden" name="list" value="<%= listTitle %>">
      </div>
    </form>
  <% }); %>

  <form action="/" method="post" class="item">
    <input type="text" name="task" placeholder="New Task" autocomplete="off" />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
<%- include("footer") -%> 
